USER_NAME = #YOUR_SNAPCHAT_USERNAME
USER_PASSWORD = #YOUR_SNAPCHAT_PASSWORD

# Postgres connection string
# Example: postgres://user:password@localhost:5432/snapbot
DATABASE_URL=

# API server port
PORT=3000

# Webhook signing secret (HMAC SHA-256). Optional; if set, callbacks include X-Signature header.
CALLBACK_HMAC_SECRET=

# Logging configuration (pino)
# LOG_LEVEL: trace | debug | info | warn | error | fatal
LOG_LEVEL=info
# LOG_FILE: path to JSON log file (container default: /app/logs/app.log)
LOG_FILE=logs/app.log

# Cookies directory for persistent session files
# In Docker this defaults to /app/data/cookies; locally you can use data/cookies
COOKIES_DIR=data/cookies
